<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/snacksRemoveBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/remove" />

    <TextView
        android:id="@+id/snacksNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Snacks Name"
        app:layout_constraintBottom_toBottomOf="@id/snacksRemoveBtn"
        app:layout_constraintStart_toEndOf="@+id/snacksRemoveBtn"
        app:layout_constraintTop_toTopOf="@+id/snacksRemoveBtn" />

    <TextView
        android:id="@+id/snacksCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="* 0"
        app:layout_constraintBottom_toBottomOf="@+id/snacksNameTxt"
        app:layout_constraintStart_toEndOf="@+id/snacksNameTxt"
        app:layout_constraintTop_toTopOf="@+id/snacksNameTxt" />

    <TextView
        android:id="@+id/snacksListPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/snacksCountTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/snacksCountTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>